doctype html
mixin item(title, url)
 li
   a(href=url class=path == url ? 'item active' : 'item')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Main Page', '/')
        +item('News', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')

    block content
